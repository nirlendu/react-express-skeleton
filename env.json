{
  "NODE_ENV": {
    "required": true,
    "description": "This defines the current environment",
    "validators": [{
      "name": "in",
      "options": ["development", "testing", "staging", "pre-production", "production"]
    }],
    "default": "development"
  },
  "PORT": {
    "required": true,
    "description": "This is the port the API server will run on",
    "default": 3000
  },
  "NODE_PATH": true,
  "DEBUG": {
    "required": false,
    "default": false,
    "description": "If set, enables additional debug messages"
  }
}